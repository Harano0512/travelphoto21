<header>
    <div class="header-bar">
      <div class="header-left">
        <%= link_to image_tag("logo.png",size: '350x60'), "/", class:"image-tag" %>
      </div>
      <div class="header-right">
        <% if user_signed_in? %>
          <div class="header-user-container">
            <%= image_tag "arrow.png", class:"arrow" %>
            <%= link_to current_user.nickname, user_path(current_user.id), class: "header-user" %>
          </div>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"sign-btn" %>
        <% else %>
          <%= link_to "新規会員登録", new_user_registration_path, class:"sign-btn" %>
          <%= link_to "ログイン", new_user_session_path,  class:"sign-btn" %>
        <% end %>
      </div>
    </div>
</header>
